    <TextView
        android:id="@+id/image_name_app_splash"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center"
        android:text="Dora News"
        android:textColor="@color/cyanBlue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/image_logo_app_splash"
        app:layout_constraintRight_toRightOf="@id/image_logo_app_splash"
        app:layout_constraintTop_toBottomOf="@id/image_logo_app_splash" />

