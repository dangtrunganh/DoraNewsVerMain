    <TableRow
        android:id="@+id/table_row_loading_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/image_loading_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/level_list_loading_splash" />

        <ImageView
            android:id="@+id/image_loading_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/level_list_loading_splash" />

        <ImageView
            android:id="@+id/image_loading_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/level_list_loading_splash" />

        <ImageView
            android:id="@+id/image_loading_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/level_list_loading_splash" />
    </TableRow>

    <TextView
        android:id="@+id/text_loading_splash"
        android:layout_width="wrap_content"
