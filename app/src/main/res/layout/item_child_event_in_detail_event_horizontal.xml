<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_bound_deh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout_item_child_event_deh"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@color/backgroundRecyclerView">

        <TextView
            android:id="@+id/text_category_item_child_event_deh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Kinh tế"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_deh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_category_item_child_event_deh">

            <ImageView
                android:id="@+id/image_cover_item_child_event_deh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_default" />

            <View
                android:id="@+id/view_story_bound_image_deh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b4ffffff"
                android:visibility="gone" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/text_title_item_child_event_deh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="4"
            android:text="Giá dầu trượt khỏi đỉnh của 5 tháng, dù nguồn cung thắt lại"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card_view_deh"
            app:layout_constraintTop_toTopOf="@id/card_view_deh" />

        <TextView
            android:id="@+id/text_time_item_child_event_deh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="5 ngày trước"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/image_more_item_child_event_deh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/text_time_item_child_event_deh"
            app:layout_constraintRight_toRightOf="@id/card_view_deh"
            app:layout_constraintTop_toTopOf="@id/text_time_item_child_event_deh" />

        <View
            android:id="@+id/view_story_bound_deh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b4ffffff"
            android:visibility="gone" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
