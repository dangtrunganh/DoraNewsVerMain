<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/lnl_background_text_event_item_event_in_vpg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/background_story" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toTopOf="@id/table_row_event"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_sum_content_item_event_in_vpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:maxLines="4"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Ngày 23/3, Ủy ban Nhân dân Tp. Hồ Chí Minh tổ chức Hội nghị gặp gỡ giữa lãnh đạo thành phố và doanh nghiệp có vốn đầu tư nước ngoài (FDI) năm 2019 với chủ đề “Thành phố Hồ Chí Minh: Hội tụ nguồn lực, kiến tạo tương."
                android:textColor="#00000000"
                android:textSize="16sp"
                android:visibility="gone" />

        </FrameLayout>

        <TableRow
            android:id="@+id/table_row_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/text_title_event_item_event_in_vpg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/text_category_item_event_in_vpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Báo Mới"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=" - "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_number_articles_item_event_in_vpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="6 bài báo"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=" - "
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_time_item_event_in_vpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:maxLines="1"
                android:gravity="right"
                android:text="5 giờ trước"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </TableRow>

        <TextView
            android:id="@+id/text_title_event_item_event_in_vpg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:paddingBottom="15dp"
            android:text="Những ngày qua, thông tin về việc Đà Lạt công bố bản “Quy hoạch chi tiết và thiết kế đô thị, tỷ lệ 1/500 khu vực trung tâm Hòa Bình"
            android:textAlignment="viewStart"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
