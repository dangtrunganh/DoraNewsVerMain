<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:background="@color/white"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/text_title_label_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sự kiện mới nhất"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_latest_event_item_story"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="@id/text_title_label_latest_event_item_story"
        app:layout_constraintTop_toBottomOf="@id/text_title_label_latest_event_item_story">

        <ImageView
            android:id="@+id/image_cover_latest_event_item_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_category_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Xã hội"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_latest_event_item_story" />

    <TextView
        android:id="@+id/text_title_name_event_latest_event_item_story"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:text="Dự báo thời tiết ngày 17/4: Miền Bắc tăng nhiệt trở lại, khả năng cao nhiều ngày sau, thời tiết sẽ rét trở lại"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_category_latest_event_item_story" />

    <TextView
        android:id="@+id/text_time_name_event_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:text="1 phút trước"
        android:textAllCaps="false"
        android:textColor="@color/lightGrey"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_name_event_latest_event_item_story" />

    <TextView
        android:id="@+id/text_divide_name_event_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:lineSpacingExtra="5dp"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="@color/lightGrey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/text_time_name_event_latest_event_item_story"
        app:layout_constraintLeft_toRightOf="@id/text_time_name_event_latest_event_item_story"
        app:layout_constraintTop_toTopOf="@id/text_time_name_event_latest_event_item_story" />

    <TextView
        android:id="@+id/text_number_articles_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:lineSpacingExtra="5dp"
        android:text="11 bài báo"
        android:textAllCaps="false"
        android:textColor="@color/lightGrey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/text_time_name_event_latest_event_item_story"
        app:layout_constraintLeft_toRightOf="@id/text_divide_name_event_latest_event_item_story"
        app:layout_constraintTop_toTopOf="@id/text_time_name_event_latest_event_item_story" />

    <ImageView
        android:id="@+id/image_more_latest_event_item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:lineSpacingExtra="5dp"
        android:src="@drawable/ic_dot_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/text_time_name_event_latest_event_item_story"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_time_name_event_latest_event_item_story" />

</android.support.constraint.ConstraintLayout>
