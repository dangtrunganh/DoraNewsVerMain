<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_image_cover_item_notification"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_cover_item_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_title_hot_item_notification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:text="Tin hot"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/card_image_cover_item_notification"
        app:layout_constraintTop_toTopOf="@id/card_image_cover_item_notification" />

    <TextView
        android:id="@+id/text_title_item_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="Khai mạc Festival nghề truyền thống Huế 2019láidgoasdgosdabfosdfsdofhsdaofsdkfbsdkfbsdfbdsb"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/text_title_hot_item_notification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_hot_item_notification" />

    <ImageView
        android:id="@+id/image_more_item_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dot_horizontal"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/text_title_item_notification"
        app:layout_constraintTop_toTopOf="@id/text_title_hot_item_notification" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/card_image_cover_item_notification" />

</android.support.constraint.ConstraintLayout>
