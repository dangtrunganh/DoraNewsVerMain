<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_item_child_event_deh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_zero"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_time_line_item_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Dòng sự kiện"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/image_circle_item_other"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_circle_item_other"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_star_circle_blue"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/view_divider_item_other"
        app:layout_constraintLeft_toLeftOf="@id/view_zero"
        app:layout_constraintRight_toRightOf="@id/view_zero"
        app:layout_constraintTop_toBottomOf="@id/text_time_line_item_other" />

    <TextView
        android:id="@+id/text_label_time_item_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Hôm nay"
        android:textColor="@color/cyanBlue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/image_circle_item_other"
        app:layout_constraintLeft_toRightOf="@id/image_circle_item_other"
        app:layout_constraintTop_toTopOf="@id/image_circle_item_other" />

    <View
        android:id="@+id/view_divider_item_other"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view_zero"
        app:layout_constraintRight_toRightOf="@id/view_zero"
        app:layout_constraintTop_toBottomOf="@id/image_circle_item_other" />

    <TextView
        android:id="@+id/text_category_item_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="Kinh tế"
        android:textColor="@color/lightGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/view_divider_item_other"
        app:layout_constraintTop_toTopOf="@id/view_divider_item_other" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_other"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_category_item_other">

        <ImageView
            android:id="@+id/image_cover_item_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_title_item_other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="4"
        android:text="Giá dầu trượt khỏi đỉnh của 5 tháng, dù nguồn cung thắt lại"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/text_category_item_other"
        app:layout_constraintRight_toLeftOf="@id/card_view_item_other"
        app:layout_constraintTop_toBottomOf="@id/text_category_item_other" />

    <TextView
        android:id="@+id/text_time_item_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:text="5 ngày trước"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_category_item_other"
        app:layout_constraintTop_toBottomOf="@id/card_view_item_other" />

    <ImageView
        android:id="@+id/image_more_item_other"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dot_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/text_time_item_other"
        app:layout_constraintRight_toRightOf="@id/card_view_item_other"
        app:layout_constraintTop_toTopOf="@id/text_time_item_other" />

</android.support.constraint.ConstraintLayout>
