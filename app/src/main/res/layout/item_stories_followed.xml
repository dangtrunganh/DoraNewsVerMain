<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_category_item_stories_followed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:text="Văn hóa"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_item_stories_followed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="5dp"
        android:maxLines="3"
        android:text="Khai mạc Festival nghề truyền thống Huế 2019"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/text_category_item_stories_followed"
        app:layout_constraintRight_toLeftOf="@id/card_image_cover_item_stories_followed"
        app:layout_constraintTop_toBottomOf="@id/text_category_item_stories_followed" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_image_cover_item_stories_followed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_category_item_stories_followed">

        <ImageView
            android:id="@+id/image_cover_item_stories_followed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_number_events_item_stories_followed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:maxLines="1"
        android:text="1 sự kiện"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_category_item_stories_followed"
        app:layout_constraintTop_toBottomOf="@id/card_image_cover_item_stories_followed" />

    <ImageView
        android:id="@+id/image_more_item_stories_followed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dot_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/text_number_events_item_stories_followed"
        app:layout_constraintRight_toRightOf="@id/card_image_cover_item_stories_followed"
        app:layout_constraintTop_toTopOf="@id/text_number_events_item_stories_followed" />

</android.support.constraint.ConstraintLayout>
