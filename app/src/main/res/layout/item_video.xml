<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp">

    <ImageView
        android:id="@+id/image_cover_item_video"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_coverage_fr_detail_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4D262626"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintLeft_toLeftOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video"
        app:layout_constraintTop_toTopOf="@id/image_cover_item_video"  />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_play_circle_outline"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintLeft_toLeftOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video"
        app:layout_constraintTop_toTopOf="@id/image_cover_item_video" />

    <TextView
        android:id="@+id/text_time_item_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="#B3000000"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="5:47"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_circle_logo_item_video"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="10dp"
        android:src="@drawable/ic_logo_youtube_chanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_cover_item_video" />

    <TextView
        android:id="@+id/text_title_item_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="Báo chí xứ Hàn đòi xử Ngọc Trinh, Bóng đá Việt Nam lọt top đầu châu Á I Chào buổi sáng I 10/06/2019"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/image_circle_logo_item_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_circle_logo_item_video" />

    <TextView
        android:id="@+id/text_chanel_name_item_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="0dp"
        android:maxLines="2"
        android:text="Phóng Tin - 111N lượt xem - 30/8/2014"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/text_title_item_video"
        app:layout_constraintTop_toBottomOf="@id/text_title_item_video" />

</android.support.constraint.ConstraintLayout>
