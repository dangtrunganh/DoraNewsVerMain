<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:paddingTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_circle_logo_item_video"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="10dp"
        android:src="@drawable/ic_logo_youtube_chanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_chanel_name_item_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="Phóng Tin"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/image_circle_logo_item_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_circle_logo_item_video" />
    <!--android:id="@+id/text_chanel_name_item_video"-->

    <TextView
        android:id="@+id/text_time_publish_item_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="0dp"
        android:maxLines="2"
        android:text="30/8/2014"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/text_chanel_name_item_video"
        app:layout_constraintTop_toBottomOf="@id/text_chanel_name_item_video" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="0dp"
        android:maxLines="2"
        android:text=" | YouTube"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/text_time_publish_item_video"
        app:layout_constraintLeft_toRightOf="@id/text_time_publish_item_video"
        app:layout_constraintTop_toTopOf="@id/text_time_publish_item_video" />

    <ImageView
        android:id="@+id/image_cover_item_video"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_time_publish_item_video" />

    <View
        android:id="@+id/view_coverage_fr_detail_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4D262626"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintLeft_toLeftOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video"
        app:layout_constraintTop_toTopOf="@id/image_cover_item_video" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_play_circle_outline"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintLeft_toLeftOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video"
        app:layout_constraintTop_toTopOf="@id/image_cover_item_video" />

    <TextView
        android:id="@+id/text_time_item_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="#B3000000"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="5:47"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/image_cover_item_video"
        app:layout_constraintRight_toRightOf="@id/image_cover_item_video" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/backgroundVideoTitle"
        android:text="Báo chí xứ Hàn đòi xử Ngọc Trinh, Bóng đá Việt Nam lọt top đầu châu Á I Chào buổi sáng I 10/06/2019"
        app:layout_constraintBottom_toBottomOf="@id/text_title_item_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_title_item_video" />


    <View
        android:id="@+id/view_click_item_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/text_title_item_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_cover_item_video" />

    <TextView
        android:id="@+id/text_title_item_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:text="Báo chí xứ Hàn đòi xử Ngọc Trinh, Bóng đá Việt Nam lọt top đầu châu Á I Chào buổi sáng I 10/06/2019"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_cover_item_video" />

    <TableRow
        android:id="@+id/table_row_share_item_video"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_item_video">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Chia sẻ"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </TableRow>

</android.support.constraint.ConstraintLayout>
